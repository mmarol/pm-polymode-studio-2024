	<nav class="header__content" aria-labelledby="hamburger">
		<div class="header__primary">
			<button id="header__hamburger--open" class="header__hamburger show" aria-label="Show Navigation Menu" aria-expanded="false" tabindex="0">{{ source( directory ~ "/dist/img/menu__open.svg") }}</button>
			<button id="header__hamburger--close" class="header__hamburger" aria-label="Hide Navigation Menu">{{ source( directory ~ "/dist/img/menu__close.svg") }}</button>

