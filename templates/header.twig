			{% if function('is_front_page') %}
				<div class="header__logo">
					<a href="{{ site.url }}">Polymode</a>
				</div>
			{% else %}
				<div class="header__logo">
					<a href="{{ site.url }}">Polymode</a>
				</div>
				<div class="header__page-title show">{{ page_title }}</div>
			{% endif %}

		</div>
		<ul id="header__menu" class="header__menu header__secondary">
			{% for item in items %}
				{% if item.current == true %}
					{% set class = "header__page--current" %}
				{% else %}
					{% set class = "" %}
				{% endif %}
				<li class="header__page {{ class }}">
					<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}&#160;â†’</a>
				</li>
			{% endfor %}
		</ul>
